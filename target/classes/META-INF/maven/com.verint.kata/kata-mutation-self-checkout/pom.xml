<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.verint.kata</groupId>
  <artifactId>kata-mutation-self-checkout</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>Mutation - Self Checkout</name>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <pitest.version>1.1.4</pitest.version>
    <pitest.java.max.memory.size>-Xmx1024m</pitest.java.max.memory.size>
    <pitest.java.max.perm.gen.size>-XX:MaxPermSize=512m</pitest.java.max.perm.gen.size>
  </properties>

  <dependencies>
  <dependency>
    <groupId>junit</groupId>
    <artifactId>junit</artifactId>
    <version>4.11</version>
    <scope>test</scope>
  </dependency>
  <dependency>
    <groupId>org.mockito</groupId>
    <artifactId>mockito-core</artifactId>
    <version>1.9.5</version>
    <scope>test</scope>
  </dependency>
  <dependency>
    <groupId>org.hamcrest</groupId>
    <artifactId>hamcrest-all</artifactId>
    <version>1.3</version>
  </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>mutation-test-report</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.pitest</groupId>
            <artifactId>pitest-maven</artifactId>
            <version>${pitest.version}</version>
            <configuration>
              <targetClasses>
                <param>com.verint.kata.mutation.*</param>
              </targetClasses>
              <targetTests>
                <param>com.verint.kata.mutation.*</param>
              </targetTests>
              <excludedClasses>
                  <param>com.verint.kata.mutation.util.*</param>
              </excludedClasses>
<!-- 
              <avoidCallsTo>
                  <avoidCallsTo>java.util.logging</avoidCallsTo>
                  <avoidCallsTo>org.apache.log4j</avoidCallsTo>
                  <avoidCallsTo>org.slf4j</avoidCallsTo>
                  <avoidCallsTo>org.apache.commons.logging</avoidCallsTo>
              </avoidCallsTo>
              <verbose>false</verbose>
              <mutationThreshold>100</mutationThreshold>
              <coverageThreshold>100</coverageThreshold>
-->
              <timestampedReports>false</timestampedReports>
              <jvmArgs>
                <value>${pitest.java.max.perm.gen.size}</value>
                <value>${pitest.java.max.memory.size}</value>
              </jvmArgs>
              <outputFormats>
                <value>HTML</value>
                <value>XML</value>
              </outputFormats>
            </configuration>
            <executions>
              <execution>
                <goals>
                  <goal>mutationCoverage</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>